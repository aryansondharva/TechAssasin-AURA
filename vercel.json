{
  "version": 2,
  "projects": [
    {
      "slug": "frontend",
      "root": "./frontend",
      "buildCommand": "npm run build",
      "outputDirectory": "./dist",
      "installCommand": "npm install"
    },
    {
      "slug": "backend-js",
      "root": "./backend-js",
      "buildCommand": "npm install",
      "outputDirectory": "./src",
      "installCommand": "npm install"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend-js/src/server.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "frontend/dist/assets/$1"
    },
    {
      "src": "/[^.]+\/?$",
      "dest": "frontend/dist/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "backend-js/src/server.js": {
      "maxDuration": 30
    }
  }
}